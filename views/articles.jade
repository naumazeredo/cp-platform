extends layout

block content
  .list
    ul
      - categories = [{title: 'Category 1', articles: [{title: 'Article 0', url: '/articles/0', difficulty: 0}, {title: 'Article 1', url: '/articles/1', difficulty: 1}]}, {title: 'Category 2', articles: [{title: 'Article 2', url: '/articles/2', difficulty: 2}, {title: 'Article 3', url: '/articles/3', difficulty: 3}]}];
      each category, index in categories
        li
          a.category(href='#sec'+index, data-toggle='collapse')
            span.category-title= category.title
            span.category-caret.fa.fa-caret-down(aria-hidden='true')
            //- TODO(naum): change to calculated value
            span.category-information 1/4
          ul.collapse.in(id='sec'+index, aria-expanded='true')
            each article in category.articles
              li
                a(href=article.url)= article.title
                span.article-information
                  - difficulties = ["Newbie 0-1199", "Pupil 1200-1399", "Specialist 1400-1599", "Expert 1600-1899", "Candidate Master 1900-2199", "Master 2200-2299", "International Master 2300-2399", "Grandmaster 2400-2599", "International Grandmaster 2600-2899", "Legendary Grandmaster 2900+"];
                  i.difficulty.difficulty-icon.fa.fa-bookmark(class='difficulty-'+article.difficulty, data-toggle="tooltip", title=difficulties[article.difficulty])
