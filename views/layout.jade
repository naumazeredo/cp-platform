doctype html
html

  block menuitem
    - var active = 'Home';
  - var menu = { 'Home': '/', 'Articles': '/articles', 'Glossary': '#' };

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='Competitive Programming Platform')

    title= title

    //- link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    //- link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .page-wrapper
      include ./common/header.jade
      .page
        //- Menu
        .container.menu
          ul
            each value, key in menu
              if active === key
                li.active: a(href=value)= key
              else
                li: a(href=value)= key
          .form-group.has-feedback.pull-right.search
            input.form-control.input-sm(type="text", placeholder="Search")
            i.form-control-feedback.fa.fa-search(aria-hidden="true")

        .container.page-content
          block content

      include ./common/footer.jade

    //- script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js')
    //- script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
    script(src='/js/jquery.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/javascripts/globals.js')
