extends layout

block content
  .container
    h2
      span.fa.fa-sign-in Sign up

    form(action='/signup', method='post')
      .form-group
        label Email
        input.form-control(type='text', name='email')
      .form-group
        label Password
        input.form-control(type='password', name='password')
      button.btn.btn-warning.btn-lg(type='submit') Sign up
