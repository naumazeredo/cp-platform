extends layout

block content
  .container
    a(href='/auth/github')
      button.btn GitHub
    h2
      span.fa.fa-sign-in Login

    form(action='/login', method='post')
      .form-group
        label Email
        input.form-control(type='text', name='email')
      .form-group
        label Password
        input.form-control(type='password', name='password')
      button.btn.btn-warning.btn-lg(type='submit') Login

    p Need an account? 
      a(href='/register') Signup
